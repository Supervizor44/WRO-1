@using Microsoft.Extensions.Localization
@using WRO.Web.Models.News
@model IEnumerable<ListNewsModel>
@inject IStringLocalizer<Lang> Localizer

@{
    ViewData["Title"] = Localizer["news_p"];
}

    <h2>@Localizer["news_p"]</h2>
<p>
    <a asp-action="Create">@Localizer["create"]</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ShortBody)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastModified)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model!)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ShortBody)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastModified)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">
                        <img src="@item.ImagePath" width="100" height="50">
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

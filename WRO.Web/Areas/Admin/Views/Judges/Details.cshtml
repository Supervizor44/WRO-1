@using WRO.Web.Areas.Admin.Models.Judge
@using System.IO
@model SingleJudgeModel

@{
    ViewData["Title"] = "Hakimlər";
}

<div>
<h2>Hakimlər</h2>
    <hr />
     <div class="row">
        <div class="col-sm-8">
            <dl class="row">
                <dt class="col-sm-4">
                    Tam adı
                </dt>
                <dd class="col-sm-8">
                    @Model.FullName
                </dd>
                <dt class="col-sm-4">
                    Əlaqə nömrəsi
                </dt>
                <dd class="col-sm-8">
                    @Model.PhoneNumber
                </dd>
                <dt class="col-sm-4">
                    Email
                </dt>
                <dd class="col-sm-8">
                    @Model.Email
                </dd>
                <dt class="col-sm-4">
                    Şəxsiyyət vəsiqəsinin fin kodu
                </dt>
                <dd class="col-sm-8">
                    @Model.IdentityNumber
                <dt class="col-sm-4">
                    Şəxsiyyət vəsiqəsinin seriya nömrəsi
                </dt>
                <dd class="col-sm-8">
                    @Model.IdSerialNumber
                </dd>
                <dt class="col-sm-4">
                    İxtisas
                </dt>
                <dd class="col-sm-8">
                    @Model.Profession
                </dd>
                <dt class="col-sm-4">
                    Bank rekvizitləri
                </dt>
                <dd class="col-sm-8">
                    @Model.BankRekvizit
                </dd>
                <dt class="col-sm-4">
                    WRO ilə bağlı təcrübəsi
                </dt>
                <dd class="col-sm-8">
                    @Model.WroExperince
                </dd>
                <dt class="col-sm-4">
                    Biznes təcrübəsi
                <dd class="col-sm-8">
                    @Model.StartupExperince
                </dd>
                <dt class="col-sm-4">
                    Hakimlik etdiyi kateqoriya
                </dt>
                <dd class="col-sm-8">
                    @Model.ContestCategoryName
                </dd>
                 <dt class="col-sm-4">
                    Qeydiyyat tarixi
                </dt>
                <dd class="col-sm-8">
                    @Model.RegistrationDate
                </dd>
            </dl>
        </div>
        <div class="col-sm-4">
            @if (System.IO.Path.GetExtension(Model.ImagePath).Equals(".pdf", StringComparison.OrdinalIgnoreCase))
            {
                <embed src="@Model.ImagePath" type="application/pdf" width="400" height="200" />
            }
            else
            {
                <img src="@Model.ImagePath" width="400" height="200" />
            }
        </div>
    </div>
   <partial name="_ConfirmDeletePartial" model="@Model!.Id"></partial>
    <a asp-action="Index">Back to List</a>
</div>
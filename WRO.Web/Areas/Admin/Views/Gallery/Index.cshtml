@using Microsoft.Extensions.Localization
@using WRO.Web.Models.Image
@model IEnumerable<GalleryImageModel>

@{
    ViewData["Title"] = "Qalereya";
}

<h2>Qalereya</h2>

<p>
    <a asp-action="Create">Yarat</a>
</p>

<div class="row">
    @foreach (var group in Model!.GroupBy(x => x.Season).OrderByDescending(x => x.Key))
    {
        <h4 class="mt-3">@group.Key</h4>
        <hr />
        @foreach (var item in group)
        {
            <div class="col-md-4 mb-3">
                <img src="@item.Path" height="200">
                <partial name="_ConfirmDeletePartial" model="@item.Id"></partial>
            </div>
        }
    }
</div>